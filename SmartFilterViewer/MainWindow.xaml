<Window x:Class="SmartFilterViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartFilterViewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="354.5" Width="531.5"
        Closed="Window_Closed">
    <Grid>
        <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" LastChildFill="True">
            <DockPanel LastChildFill="True" DockPanel.Dock="Top" Margin="8">
                <Button Content="Daten Lesen" Width="75" Click="ReadDataBtn_Click" Margin="10,0,0,0" DockPanel.Dock="Right"/>
                <Button Content="Browse" Width="75" Click="BrowseBtn_Click" Margin="10,0,0,0" DockPanel.Dock="Right"/>
                <TextBox x:Name="fileSelectEdit"/>
            </DockPanel>
            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="8">
                <Button Content="Start Animation" VerticalAlignment="Center" Width="105" Click="StartAnimationBtn_Click"/>
                <Label x:Name="TimestampLabel" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Width="95"/>
                <Slider x:Name="PlaybackSpeedSlider" VerticalAlignment="Center" Margin="40,0,0,0" Width="155" Minimum="0.0" Maximum="100.0" SmallChange="0.1" LargeChange="0.5" TickFrequency="0.1" ValueChanged="PlaybackSpeedSlider_ValueChanged" Value="1"/>
                <Label x:Name="PlaybackSpeedLabel" Content="1x" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </StackPanel>
            <ProgressBar x:Name="PlaybackProgressBar" Height="20" Minimum="0" Maximum="1" DockPanel.Dock="Bottom" Margin="8" MouseUp="PlaybackProgressBar_MouseUp"/>
            <InkCanvas x:Name="TimelineGraph" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="100" DockPanel.Dock="Bottom" Margin="8" Cursor="Hand"
                       SizeChanged="TimelineGraph_SizeChanged" 
                       MouseWheel="TimelineGraph_MouseWheel" 
                       PreviewMouseDown="TimelineGraph_PreviewMouseDown"
                       PreviewMouseUp="TimelineGraph_PreviewMouseUp"
                       PreviewMouseMove="TimelineGraph_PreviewMouseMove"/>
            <Grid Margin="8">
                <Ellipse x:Name="Sensor1" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="50" Margin="10,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="50"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
