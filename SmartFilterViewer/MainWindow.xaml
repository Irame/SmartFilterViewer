<Window x:Class="SmartFilterViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartFilterViewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="563.5" Width="526"
        Loaded="Window_Loaded"
        Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="1" Margin="8" MaxWidth="300" MaxHeight="300" BorderThickness="2" BorderBrush="Black">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Ellipse x:Name="Sensor1" Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="50" Stroke="Black" VerticalAlignment="Center" Width="50" StrokeThickness="3" Grid.Column="0" Grid.Row="0" MouseUp="Sensor_MouseUp" Cursor="Hand"/>
                <Ellipse x:Name="Sensor2" Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="50" Stroke="Black" VerticalAlignment="Center" Width="50" StrokeThickness="3" Grid.Column="1" Grid.Row="0" MouseUp="Sensor_MouseUp" Cursor="Hand"/>
                <Ellipse x:Name="Sensor3" Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="50" Stroke="Black" VerticalAlignment="Center" Width="50" StrokeThickness="3" Grid.Column="2" Grid.Row="0" MouseUp="Sensor_MouseUp" Cursor="Hand"/>
                <Ellipse x:Name="Sensor4" Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="50" Stroke="Black" VerticalAlignment="Center" Width="50" StrokeThickness="3" Grid.Column="0" Grid.Row="1" MouseUp="Sensor_MouseUp" Cursor="Hand"/>
                <Ellipse x:Name="Sensor5" Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="50" Stroke="Black" VerticalAlignment="Center" Width="50" StrokeThickness="3" Grid.Column="1" Grid.Row="1" MouseUp="Sensor_MouseUp" Cursor="Hand"/>
                <Ellipse x:Name="Sensor6" Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="50" Stroke="Black" VerticalAlignment="Center" Width="50" StrokeThickness="3" Grid.Column="2" Grid.Row="1" MouseUp="Sensor_MouseUp" Cursor="Hand"/>
                <Ellipse x:Name="Sensor7" Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="50" Stroke="Black" VerticalAlignment="Center" Width="50" StrokeThickness="3" Grid.Column="0" Grid.Row="2" MouseUp="Sensor_MouseUp" Cursor="Hand"/>
                <Ellipse x:Name="Sensor8" Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="50" Stroke="Black" VerticalAlignment="Center" Width="50" StrokeThickness="3" Grid.Column="1" Grid.Row="2" MouseUp="Sensor_MouseUp" Cursor="Hand"/>
                <Ellipse x:Name="Sensor9" Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="50" Stroke="Black" VerticalAlignment="Center" Width="50" StrokeThickness="3" Grid.Column="2" Grid.Row="2" MouseUp="Sensor_MouseUp" Cursor="Hand"/>
            </Grid>
        </Border>
        <InkCanvas x:Name="TimelineGraph" Height="100" HorizontalAlignment="Stretch" Cursor="Hand" Margin="8" Grid.Row="2"
                       SizeChanged="TimelineGraph_SizeChanged" 
                       MouseWheel="TimelineGraph_MouseWheel" 
                       PreviewMouseDown="TimelineGraph_PreviewMouseDown"
                       PreviewMouseUp="TimelineGraph_PreviewMouseUp"
                       PreviewMouseMove="TimelineGraph_PreviewMouseMove"/>
        <local:ScrubProgressBar x:Name="PlaybackProgressBar" Minimum="0" Maximum="1" Height="20" Margin="8" Grid.Row="3" Cursor="Hand" ScrubbedToValue="PlaybackProgressBar_ScrubbedToValue" IsScrubbingChanged="PlaybackProgressBar_IsScrubbingChanged"/>
        <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal" Margin="8" Grid.Row="4">
            <Button Content="Start Animation" VerticalAlignment="Center" Width="105" Click="StartAnimationBtn_Click"/>
            <Label x:Name="TimestampLabel" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Width="95"/>
            <Slider x:Name="PlaybackSpeedSlider" VerticalAlignment="Center" Margin="40,0,0,0" Width="155" Minimum="0.0" Maximum="100.0" SmallChange="0.1" LargeChange="0.5" TickFrequency="0.1" ValueChanged="PlaybackSpeedSlider_ValueChanged" Value="1"/>
            <Label x:Name="PlaybackSpeedLabel" Content="1x" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Button Content="Reset Zoom" Width="75" Click="ResetZoomBtn_Click"/>
        </StackPanel>
        <ComboBox x:Name="ValuesComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Grid.Row="0" SelectionChanged="ValuesComboBox_SelectionChanged"/>
    </Grid>
</Window>
