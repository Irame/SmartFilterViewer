            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" x:Name="BarRow"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <local:AxisLabels Width="50" Grid.Column="0" Orientation="Vertical" TickPosition="End" MinTickSpacing="30" TickInfos="{Binding ValueTickInfos, Mode=OneWay}" MaxTickCount="{Binding ValueMaxTickCount, Mode=OneWayToSource}"/>
