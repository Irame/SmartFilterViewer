        mc:Ignorable="d"
        Title="HistogramWindow" Height="250" Width="550"
        Closing="Window_Closing"
        IsVisibleChanged="Window_IsVisibleChanged"
        d:DataContext="{d:DesignInstance Type=local:HistogramViewModel, IsDesignTimeCreatable=True}">
